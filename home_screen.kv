<HomeScreen@MDScreen>
    md_bg_color: 10/255,10/255,41/255,1
    padding:10,10,10,10
    ScrollView:
        size_hint_y: None
        height:root.height-5
        
        MDGridLayout:
            height:self.minimum_height
            id:weather_widget
            size_hint_y: None
            cols:2
            padding: [dp(15),dp(15),dp(15),dp(35)]
            spacing: dp(15)


            MDFloatLayout:   # The first FloatLayout in the first column in the gridLayout
                size_hint:None,None
                size: 0,140

